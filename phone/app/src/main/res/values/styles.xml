<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_a200</item>
        <item name="colorAccent">@color/material_purple_a700</item>
        <item name="colorControlActivated">@color/material_purple_a700</item>
        <item name="colorControlHighlight">@color/material_red_a200</item>
    </style>

    <style name="customButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingEnd">5dip</item>
        <item name="android:paddingStart">5dip</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_500</item>
        <item name="colorAccent">@color/material_purple_a700</item>
        <item name="android:windowBackground">@color/material_red_500</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    https://stackoverflow.com/questions/29357310/android-how-to-hide-progress-circle-in-facebook-login
    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>
</resources>
